{
  "name": "express-boilerplate",
  "version": "1.0.0",
  "description": "Express boilerplate",
  "author": "Ahmed Farag",
  "main": "src/index.js",
  "private": false,
  "license": "MIT",
  "engines": {
    "node": ">=11",
    "yarn": "*"
  },
  "scripts": {
    "precommit": "yarn lint",
    "prestart": "yarn docs",
    "start": "nodemon ./src/index.js",
    "dev": "nodemon ./src/index.js",
    "lint": "eslint ./src/ --ignore-path .gitignore --ignore-pattern internals/scripts",
    "lint:fix": "yarn lint --fix",
    "lint:watch": "yarn lint --watch",
    "test": " nyc --reporter=html --reporter=text mocha --timeout 20000 --recursive src/api/tests",
    "test:unit": " mocha src/api/tests/unit",
    "test:integration": " mocha --timeout 20000 src/api/tests/integration",
    "test:watch": "mocha --watch src/api/tests/unit",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "postcoverage": "opn coverage/lcov-report/index.html",
    "validate": "yarn lint && yarn test",
    "postpublish": "git push --tags",
    "deploy": "sh ./deploy.sh",
    "docs": "apidoc -i src -o docs",
    "postdocs": "opn docs/index.html"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:ahmedfaragmostafa/express-boilerplate.git"
  },
  "keywords": [
    "express",
    "node",
    "node.js",
    "mongoose",
    "es2017",
    "mocha",
    "nyc",
    "eslint",
    "coveralls",
    "REST",
    "API",
    "boilerplate",
    "generator",
    "starter project"
  ],
  "dependencies": {
    "axios": "^0.21.1",
    "bluebird": "^3.5.0",
    "body-parser": "^1.17.0",
    "compression": "^1.6.2",
    "cors": "^2.8.3",
    "express": "^4.15.2",
    "express-validation": "^1.0.2",
    "http-status": "^1.0.1",
    "joi": "^10.4.1",
    "lodash": "^4.17.19",
    "method-override": "^3.0.0",
    "mongoose": "^5.7.5",
    "morgan": "^1.8.1",
    "nyc": "^14.1.1",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "apidoc": "^0.17.5",
    "chai": "^4.1.0",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.0",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^12.0.1",
    "eslint-plugin-import": "^2.2.0",
    "husky": "^0.14.3",
    "mocha": "^3.3.0",
    "nodemon": "^1.11.0",
    "nyc": "^12.0.2",
    "opn-cli": "^3.1.0",
    "sinon": "^6.0.0",
    "sinon-chai": "^3.0.0",
    "supertest": "^4.0.2"
  }
}
